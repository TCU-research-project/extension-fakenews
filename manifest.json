{
    "manifest_version": 3,
    "name": "detect-fake-news",
    "description": "Tien ich nhan dien fake news",
    "version": "1.0.0",
    "host_permissions": ["https://*.openai.com/"],
    "permissions": ["storage", "tabs", "contextMenus", "activeTab", "scripting"],
    "icons": {
        "512": "assets/icons/logo.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [ "assets/icons/fake-news.jpg", "assets/icons/true-news.jpg" ],
            "matches": [ "<all_urls>" ]
        }
    ]
}